\ Set namespace
ns: sdr

\ ============================================================================
\ General page of the options dialog
{
	"kind" : "box",	
	"bounds" : ` 0 0 25 100 do_bounds `,
	"flex" : ` "col" flex_do_box `,
	"children" :
	[
		{
			"kind" : "label",
			"label" : "Smpl rate",
			"flex" : ` 100 22 flex_do_widget `
		},
		{
			"kind" : "label",
			"label" : "Num RX",
			"flex" : ` 100 22 flex_do_widget `
		},
		{
			"kind" : "label",
			"label" : "Blk sz",
			"flex" : ` 100 22 flex_do_widget `
		}
	]
} var, general_flex_box_labels

